<h2>List of ratings</h2>
<ul>
  <% @ratings.each do |rating| %>
    <li>
      <%= rating %>
      <%= link_to rating.user.username, rating.user %>
    </li>
  <% end %>
</ul>
<p>
    Number of ratings:
    <%= @ratings.count %>
</p>
<p>
    <%= link_to('create new rating', new_rating_path, class:'btn btn-primary') if current_user %>
</p>
