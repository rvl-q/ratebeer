<% if @place %>
  <h3><%= @place.name %></h3>
  <p>
    <%= @place.status %>
  </p>
  <p>
    <%= @place.street %>
  </p>
  <p>
    <%= @place.zip %>
    <%= @place.city %>
  </p>

<% else %>
  <h3>This bar was not in the cache (id: <%= params[:id] %>)</h3>
  <p>
    Please use links to navigate!
  </p>
<% end %>