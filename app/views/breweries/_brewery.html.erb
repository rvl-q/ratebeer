<div id="<%= dom_id brewery %>">
  <h3>
    <%= brewery.name %>
    <% if not brewery.active  %>
      <span class="badge bg-secondary">retired</span>
    <% end %>
  </h3>

  <em>
    Established in
    <%= brewery.year %>
  </em>
  <p>
    Beers:
    <%= brewery.beers.count %>
  </p>
  <p>
    <h4>
      Beers
    </h4>

    <div>
      <table id="brewerybeerstable" class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Style</th>
          <th>Rating</th>
        </tr>
      <thead>
      <tbody>
        <% brewery.beers.each do |beer| %>
          <tr>
            <td><%= link_to beer.name, beer %></td>
            <td><%= link_to "#{beer.style.name}", style_path(beer.style) %></td>
            <td><%= round beer.average_rating %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </p>
</div>
