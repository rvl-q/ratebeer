
<%= render @brewery %>

<% if @brewery.ratings.empty? %>
 Brewery has not yet been rated!
<% else %>
 Brewery has <%= pluralize(@brewery.ratings.count, 'rating') %> with an average of <%= @brewery.average_rating %>
<% end %>

<div>
  <% if current_user %>
    <%= link_to("Edit this brewery", edit_brewery_path(@brewery), class:'btn btn-primary') %> |
  <% end %>
  <%= link_to("Back to breweries", breweries_path, class:'btn btn-primary') %>

  <%= button_to("Destroy this brewery", @brewery, method: :delete, class:'btn btn-danger') if current_user %>
</div>
